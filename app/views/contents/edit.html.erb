<div class="wrapper">

  <div class="side-bar">
    <%= render "categories/side_bar" %>
  </div>

  <div class="conainer">
  <div class="header-title">
      <%= @bank.name %>
  </div>
    <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
    <% end %>
  </div>
</div>

  <div class="content">
    <div class="category_detail">
          <div class="group text-dark">
            <%= @category_at.subject %>  
            <%= form_with model: @content, url: bank_category_content_path, class: 'form', local: true do |f| %>
              <div class="form-input text-dark"> 
                <%= f.text_field :detail, class: 'form-message', autofocus: true %>
                <%= f.submit '登録', class: 'form-submit', data:{ confirm: "内容に間違いはありませんか？", cancel: "やめる", commit: '登録', title: 'Check'} %>
              </div> 
            <% end %>
          </div>
    </div>
  </div>