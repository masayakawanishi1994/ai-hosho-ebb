<div class="wrapper">
  <div class="side-bar">
    <%= render "categories/side_bar" %>
  </div>
  <div class="conainer">
  <div class="header-title">
      <%= "金融機関名変更・削除" %>
  </div>
    <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
    <% end %>
  </div>
</div>
<div class="add_content">
  <div class="content-form">
    <div class="content-form__label text-dark">
      <i class="fas fa-plus-circle">
      <%= "金融機関名" %>
      </i>
    </div>
    <%= form_with model: @bank, class: 'form', local: true do |f|%>
      <div class="content-form__field_box text-dark"> 
        <%= f.text_field :name, class: 'box', autofocus: true %>
      </div>
      <div class='content-form__field_end'>
        <%= f.submit '変更', class: 'category-form__action-btn', data:{ confirm: "内容に間違いはありませんか？", cancel: "やめる", commit: '登録', title: 'Check'} %>
      </div> 
    <% end %>
    
    <div class = "back_one">
      <span class="delete_one">
        <%= link_to "出向先削除", bank_path, method: :delete, class: 'fas fa-trash-alt btn', data:{ confirm: "削除してよろしいでしょうか？", cancel: "やめる", commit: '登録', title: 'Check'} %>
      </span>
      <%= link_to "ホームへ戻る", root_path, class: 'btn'%>
      <span class="back_two">
      <%= link_to("戻る", :back, {class: 'btn'}) %>
      </span>
    </div>
  </div>
</div>